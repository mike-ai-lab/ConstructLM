{
  "name": "constructlm",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"node server/proxy.js\" \"vite\"",
    "proxy": "node server/proxy.js",
    "build": "vite build",
    "preview": "vite preview",
    "electron:start": "npm run electron:dev",
    "electron:dev": "concurrently \"vite\" \"vite build --config electron.vite.config.ts --watch\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && vite build --config electron.vite.config.ts && electron-builder",
    "electron:pack": "vite build && vite build --config electron.vite.config.ts && electron-builder --dir"
  },
  "dependencies": {
    "@google/genai": "^1.31.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "@xenova/transformers": "^2.17.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "idb-keyval": "6",
    "jszip": "^3.10.1",
    "lucide-react": "^0.556.0",
    "mark.js": "^8.11.1",
    "rangy": "^1.3.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.0"
  },
  "author": {
    "name": "Int. Arch. M.Shkeir",
    "email": "contact@studio.com"
  },
  "description": "AI-Powered Document Analysis & Multi-Model Chat Assistant",
  "build": {
    "appId": "com.constructlm.app",
    "productName": "ConstructLM",
    "copyright": "Copyright © 2025 Int. Arch. M.Shkeir",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "logo.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "publisherName": "Studiø",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ConstructLM"
    },
    "mac": {
      "target": "dmg",
      "icon": "logo.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "logo.png",
      "category": "Office"
    }
  }
}
